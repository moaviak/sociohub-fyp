generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

enum UserLoginType {
  EMAIL_PASSWORD
  GOOGLE
}

model Student {
  id                 String   @id @default(uuid())
  firstName          String
  lastName           String
  email              String   @unique
  username           String   @unique
  registrationNumber String?   @unique
  password           String
  loginType          UserLoginType @default(EMAIL_PASSWORD)
  refreshToken       String?
  isEmailVerified  Boolean @default(false)
  emailVerificationCode String?
  emailVerificationExpiry DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model Advisor {
  id                 String   @id @default(uuid())
  firstName          String
  lastName           String
  displayName        String
  email              String   @unique
  username           String   @unique
  password           String
  refreshToken       String?
  isEmailVerified  Boolean @default(false)
  emailVerificationCode String?
  emailVerificationExpiry DateTime?
  createdAt          DateTime @default(now())
  updatedAt          DateTime @updatedAt
}

model SocietyAdvisor {
  id String @id @default(uuid())
  firstName String
  lastName String
  displayName String
  email String @unique
  society String
  createdAt DateTime @default(now())
  updatedAt DateTime @updatedAt
}